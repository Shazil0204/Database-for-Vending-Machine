@page
@model AdminSide.Pages.AdminModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1"> -->
    <title>Welcome Admin!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/css/admin.css" rel="stylesheet">
    <link href="/css/checkbox.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="d-flex flex-lg-row flex-column">
                <div class="black-border flex-fill">
                    <!-- This is to show options -->
                    <div class="create-vm black-border-inside flex-fill" id="sidebar">
                        <!-- will use this to create vending_machine -->
                        <a asp-page="/createVM">
                            <button>
                                <img src="/Images/1Create.png" alt="create vending machine">
                            </button>
                        </a>
                    </div>
                    <div class="delete_vm black-border-inside flex-fill" id="sidebar">
                        <!-- will use this to delete vending_machine -->
                        <a asp-page="/deleteVM">
                            <button>
                                <img src="/Images/2Delete.png" alt="delete vending machine">
                            </button>
                        </a>
                    </div>
                    <div class="insert_city black-border-inside flex-fill">
                        <!-- will use this to insert a new city -->
                        <a asp-page="/createCity">
                            <button>
                                <img src="/Images/3InsertACity.png" alt="insert a city">
                            </button>
                        </a>
                    </div>
                </div>
                <div class="black-border flex-fill">
                    <!-- This is to show the vending machine -->
                    <div class="black-border-inside flex-fill">
                        <!-- will use this to show vending_machine -->
                        <a asp-page="/index">
                            <button id="vending_machine">
                                <img id="vending_machine-main-img" src="/Images/4VendingMachine.png"
                                     alt="vending machine">
                            </button>
                        </a>
                    </div>
                    <div class="status black-border-inside flex-fill d-flex">
                        <!-- will use this to show status of vending_machine -->
                        <h3> Vending Machine status: </h3>
                        <label class="switch">
                            <input type="checkbox">
                            <span class="slider round"></span>
                        </label>

                    </div>
                    <div class="update_city black-border-inside flex-fill">
                        <!-- will use this to update city name -->
                        <a asp-page="/updateCity">
                            <button>
                                <img src="/Images/6UpdateACity.png" alt="update a city">
                            </button>
                        </a>
                    </div>
                </div>
                <div class="black-border flex-fill">
                    <!-- This is to show options -->
                    <div class="update_vm black-border-inside flex-fill " id="sidebar">
                        <!-- will use this to update vending_machine -->
                        <a asp-page="/updateVM">
                            <button>
                                <img src="/Images/7Update.png" alt="update vending machine">
                            </button>
                        </a>
                    </div>
                    <div class="show_vms black-border-inside flex-fill" id="sidebar">
                        <!-- will use this to show all vending_machine -->
                        <a asp-page="/showAll">
                            <button>
                                <img src="/Images/8ShowAll.png" alt="Show all vending machines">
                            </button>
                        </a>
                    </div>
                    <div class="remove_city black-border-inside flex-fill  sidebar">
                        <!-- will use this to remove city from database -->
                        <a asp-page="/deleteCity">
                            <button>
                                <img src="/Images/9RemoveACity.png" alt="Remove a city">
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>